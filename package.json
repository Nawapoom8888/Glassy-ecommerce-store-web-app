{
  "name": "glassy-store-app",
  "version": "1.0.0",
  "description": "MERN Stack E-commerce App",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node backend/index.js",
    "server": "nodemon backend/index.js",
    "client": "npm run dev --prefix frontend",
